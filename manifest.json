{
  "manifest_version": 2,

  "name": "Address Collector",
  "description": "Collects mailing addresses and formats then for labels",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "http://*/",
    "alarms",
    "tabs"
  ]
}
